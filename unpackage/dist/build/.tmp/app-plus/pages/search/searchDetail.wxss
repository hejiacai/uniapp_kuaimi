.searchTop {
  width: 100%;
  height: auto;
  position: fixed;
  top: 0;
  z-index: 999;
  background: #ffffff;
}
.searchDetail {
  width: 100%;
}
.searchDetail .search-nav-bar {
  width: 100%;
  height: 62rpx;
  line-height: 62rpx;
  border-bottom: 1px solid #f1f1f1;
  padding: 10rpx 0;
}
.searchDetail .back {
  font-size: 32rpx;
  width: 76rpx;
  float: left;
  margin-right: 20rpx;
  text-align: center;
}
.searchDetail .search-input {
  -webkit-box-shadow: 0 0 10px #e8e8e8;
          box-shadow: 0 0 10px #e8e8e8;
  float: left;
  background: #FFFFFF;
  height: 60rpx;
  line-height: 60rpx;
  width: 530rpx;
  border-radius: 10rpx;
  text-indent: 34rpx;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.searchDetail .searchIcon {
  float: left;
  color: #ccc;
  font-size: 36rpx;
  text-align: center;
}
.searchDetail .search-input input {
  float: left;
  font-size: 28rpx;
  width: 450rpx;
  height: 40rpx;
  line-height: 40rpx;
  padding: 10rpx 0;
  text-align: left;
}
.searchDetail .search-btn {
  float: left;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  width: 100rpx;
}
.jobList {
  width: 100%;
  overflow: hidden;
  margin-top: 90px;
